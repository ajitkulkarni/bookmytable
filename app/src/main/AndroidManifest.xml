<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.bookmytable" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LandingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RestroSearchActivity"
            android:label="@string/title_activity_restro_search" >
        </activity>
        <activity
            android:name=".RestroDetailActivity"
            android:label="@string/title_activity_restro_detail" >
        </activity>
        <activity
            android:name=".RestroBookingActivity"
            android:label="@string/title_activity_restro_booking" >
        </activity>
        <activity
            android:name=".BookingResultActivity"
            android:label="@string/title_activity_booking_result" >
        </activity>
    </application>

</manifest>
