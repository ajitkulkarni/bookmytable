<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.bookmytable.RestroDetailActivity">

    <TextView
        android:id="@+id/restro_name_dtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Restro Name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/restro_address_dtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restro_name_dtl"
        android:text="title text"
        android:textSize="14dp"
        />
    <TextView
        android:id="@+id/restro_capacity_dtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restro_name_dtl"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        android:text="description text"
        />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/restro_capacity_dtl"
        android:layout_marginTop="24dp"
        android:text="@string/Username" />
    
        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restro_capacity_dtl"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:ems="10"
            android:inputType="text"/>

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nameText"
        android:layout_marginTop="24dp"
        android:text="@string/Email" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameText"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:ems="10"
        android:inputType="text"/>

    <TextView
        android:id="@+id/contactNoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/emailText"
        android:layout_marginTop="24dp"
        android:text="Contact No:" />

    <EditText
        android:id="@+id/contactNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailText"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:ems="10"
        android:inputType="number"/>

    <TextView
        android:id="@+id/numberOfSeatsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contactNoTxt"
        android:layout_marginTop="24dp"
        android:text="@string/NumberOfSeats" />

    <EditText
        android:id="@+id/numberOfSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactNoTxt"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:ems="10"
        android:inputType="number"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfSeatsTxt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:text="Book"
        android:onClick="onBookingButtonClick"/>


</RelativeLayout>
